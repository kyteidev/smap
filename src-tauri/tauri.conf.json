{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "smap",
  "version": "0.1.0",
  "identifier": "dev.kyteidev.smap",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "smap",
        "width": 600,
        "height": 450,
        "visible": true,
        "transparent": true,
        "hiddenTitle": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "smap cli",
      "subcommands": {
        "open": {
          "description": "Run the application"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
